{
  "name": "mint",
  "description": "薄荷的花语是：永不消逝的爱",
  "version": "4.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "next dev",
    "preview": "serve out",
    "update-deps": "pnpm update -i --latest",
    "postinstall": "[ -n \"$CI\" ] || lefthook install",
    "clear-image-cache": "tsx scripts/clear-image-cache.ts",
    "remove-unused-image": "tsx scripts/remove-unused-image.ts",
    "lint": "biome check --write --no-errors-on-unmatched --diagnostic-level=error .",
    "build": "pnpm clear-image-cache && next build && pnpm remove-unused-image"
  },
  "dependencies": {
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xsta": "^2.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@del-wang/config": "^1.2.0",
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.18",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.0.14",
    "@types/react": "^18.2.10",
    "@types/react-dom": "^18.2.4",
    "got": "^14.2.1",
    "https-proxy-agent": "^7.0.4",
    "lefthook": "^1.12.2",
    "next-file-loader": "^1.0.0",
    "proper-lockfile": "^4.1.2",
    "rehype-prism-plus": "^2.0.0",
    "remark-gfm": "^4.0.0",
    "sharp": "^0.33.3",
    "tsx": "^4.7.2",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.13.1"
}
